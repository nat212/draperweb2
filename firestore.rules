rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function getWishlist(wl) {
      return get(/databases/$(database)/documents/wishlists/$(wl)).data;
    }
    function canEditWishlist(wl) {
      return getWishlist(wl).uid == request.auth.uid || getWishlist(wl).shared == true;
    }
  	match /wishlists/{wishlist} {
    	allow read, create: if request.auth.uid != null;
      allow update, delete: if canEditWishlist(wishlist);
      match /items/{item} {
        allow read: if request.auth.uid != null;
        allow create, update, delete: if canEditWishlist(wishlist);
      }
    }
    match /users/{userId} {
      allow read, create: if request.auth.uid != null;
      allow update, delete: if request.auth.uid == userId;
    }
    match /budgets/{document=**} {
      allow read, write: if request.auth.uid != null;
    }
    match /defaultColumns/{document=**} {
      allow read, write: if request.auth.uid != null;
    }
    match /categories/{document=**} {
      allow read, write: if request.auth.uid != null;
    }
    match /icons/{document=**} {
      allow read, write: if request.auth.uid != null;
    }
    match /icons/{document=**} {
      allow read, write: if request.auth.uid != null;
    }
    match /history/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
